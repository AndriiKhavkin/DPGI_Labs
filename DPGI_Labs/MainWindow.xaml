<Window x:Class="DPGI_Labs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPGI_Labs"
        mc:Ignorable="d"
        Title="Конвертер валют" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введіть сумму" Margin="0,0,0,10"/>
            <TextBox x:Name="AmountTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Введіть вадюту" Margin="0,0,0,10"/>
            <ComboBox x:Name="CurrencyComboBox" Margin="0,0,0,10"/>

            <Button Content="Конвертувати в грн" Margin="0,0,0,10"/>
            <Button Content="Конвертувати з грн" Margin="0,0,0,10"/>

            <TextBlock x:Name="ResultTextBlock" Margin="0,20,0,0" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</Window>
