<Window x:Class="DPGI_Labs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPGI_Labs"
        mc:Ignorable="d"
        Title="Lab2" Height="400" Width="800">

    <DockPanel LastChildFill="False">
        <Label Content="Label" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <TextBox DockPanel.Dock="Left" Width="300">TextBox</TextBox>
        <TextBox DockPanel.Dock="Right" Width="300">TextBox</TextBox>
        <Button DockPanel.Dock="Bottom" Content="Button" Height="Auto" Margin="50"/>
    </DockPanel>

</Window>
